{
  "name": "cabal-ai-agent",
  "version": "1.0.0",
  "description": "An AI agent built for the universe of Command and Conquer: Tiberian Sun.",
  "license": "MIT",
  "author": "Yao-Hui Chua <hello@yao.page> (https://yao.page)",
